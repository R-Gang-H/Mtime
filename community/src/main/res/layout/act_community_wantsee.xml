<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_88px"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mTitleBackIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_dark"
            android:paddingLeft="@dimen/offset_30px"
            android:paddingTop="@dimen/offset_20px"
            android:paddingBottom="@dimen/offset_20px"
            android:paddingRight="@dimen/offset_20px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/tip"
            android:layout_width="@dimen/offset_360px"
            android:layout_height="@dimen/offset_60px"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/color_f1f4f5"
            >

            <TextView
                android:id="@+id/left_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/wantsee"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/offset_15sp"
                android:textStyle="bold"
                tools:background="@color/color_20a0da"
                />

            <TextView
                android:id="@+id/right_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/wantseed"
                android:textColor="@color/color_8798af"
                android:textSize="@dimen/offset_15sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/offset_88px"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
