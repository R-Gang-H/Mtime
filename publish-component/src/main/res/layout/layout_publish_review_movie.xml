<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mContentMovieCl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_15px"
        android:layout_marginBottom="@dimen/offset_15px"
        android:layout_marginStart="@dimen/offset_30px"
        android:layout_marginEnd="@dimen/offset_30px"
        android:background="@color/color_f2f3f6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!-- 影片名 -->
        <TextView
            android:id="@+id/mContentMovieNameTv"
            android:layout_width="@dimen/offset_0px"
            android:layout_height="@dimen/offset_108px"
            android:paddingStart="@dimen/offset_92px"
            android:paddingEnd="@dimen/offset_0px"
            android:textColor="@color/color_303a47"
            android:textSize="@dimen/offset_17sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:Text="影片名影片名影片名XXXXXX"
            />


        <!-- 影片图标 -->
        <ImageView
            android:id="@+id/mContentMovieIv"
            android:layout_width="@dimen/offset_32px"
            android:layout_height="@dimen/offset_32px"
            android:layout_marginStart="@dimen/offset_30px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/icon_publish_content_movie"
            android:contentDescription="@string/loading"
            />

        <!-- 移动 -->
        <ImageView
            android:id="@+id/mContentMovieMoveIv"
            android:layout_width="@dimen/offset_40px"
            android:layout_height="@dimen/offset_40px"
            android:layout_marginEnd="@dimen/offset_30px"
            app:srcCompat="@drawable/icon_publish_content_move"
            android:contentDescription="@string/loading"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <!-- 转为文字链接 -->
        <ImageView
            android:id="@+id/mContentMovieLinkIv"
            android:layout_width="@dimen/offset_40px"
            android:layout_height="@dimen/offset_40px"
            android:layout_marginEnd="@dimen/offset_20px"
            app:srcCompat="@drawable/icon_publish_content_movie_link"
            android:contentDescription="@string/loading"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mContentMovieMoveIv"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 删除 -->
    <ImageView
        android:id="@+id/mContentMovieDeleteIv"
        android:layout_width="@dimen/offset_40px"
        android:layout_height="@dimen/offset_40px"
        android:layout_marginStart="@dimen/offset_14px"
        android:visibility="visible"
        android:contentDescription="@string/loading"
        app:srcCompat="@drawable/icon_publish_content_del"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>