<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/offset_30px"
    android:paddingBottom="@dimen/offset_15px"
    >

    <EditText
        android:id="@+id/mContentEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_30px"
        android:layout_marginRight="@dimen/offset_30px"
        android:background="@null"
        android:hint="@string/publish_review_content_hint"
        android:textColorHint="@color/color_aab7c7"
        android:lineSpacingExtra="4px"
        android:textColor="@color/color_4e5e73"
        android:textSize="@dimen/offset_16sp"
        android:textCursorDrawable="@drawable/shape_publish_review_title_cursor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
