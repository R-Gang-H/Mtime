<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/offset_60px"
    >

    <!-- 影片评分 -->
    <TextView
        android:id="@+id/mMovieScoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/color_20a0da"
        android:textSize="@dimen/offset_36sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <!-- 评分描述 -->
    <TextView
        android:id="@+id/mMovieScoreDesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10px"
        android:text="@string/publish_review_select_movie_score_hint"
        android:textColor="@color/color_20a0da"
        android:textSize="@dimen/offset_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mMovieScoreTv"
        />

    <!-- 选择评分 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_60px"
        app:layout_constraintTop_toBottomOf="@+id/mMovieScoreDesTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/mRatingOneTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingTwoTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingOneTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingThreeTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingTwoTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingFourTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingThreeTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingFiveTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingFourTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingSixTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingFiveTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingSevenTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingSixTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingEightTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingSevenTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingNightTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingEightTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

        <ImageView
            android:id="@+id/mRatingTenTv"
            android:layout_width="@dimen/offset_54px"
            android:layout_height="@dimen/offset_76px"
            android:layout_marginLeft="@dimen/offset_10px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mRatingNightTv"
            app:srcCompat="@drawable/icon_publish_rating_default"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
