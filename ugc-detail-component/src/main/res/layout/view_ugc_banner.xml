<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:id="@+id/viewPager2"
        android:layout_height="match_parent"/>
<!--    标题-->
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/titleFL"
        android:paddingBottom="@dimen/offset_30px"
        android:layout_height="wrap_content">

<!--        标题-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/ugcTitleTv"
            android:layout_marginLeft="@dimen/offset_30px"
            android:layout_marginRight="@dimen/offset_30px"
            android:textSize="@dimen/font_size_sp_19"
            android:textColor="@color/color_ffffff"
            android:layout_height="wrap_content"/>
    </FrameLayout>

<!--描述-->
    <FrameLayout
        android:id="@+id/contentFL"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/offset_80px"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:id="@+id/ugcContentTv"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_sp_14"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/offset_30px"
            android:layout_marginRight="@dimen/offset_30px"
            android:layout_height="wrap_content"/>


    </FrameLayout>

    <!--    索引值-->
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/ugcIndexTv"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_size_sp_14"
        android:textColor="@color/color_ffffff"
        android:paddingTop="@dimen/offset_2px"
        android:paddingBottom="@dimen/offset_2px"
        android:layout_marginBottom="@dimen/offset_34px"
        android:layout_marginRight="@dimen/offset_10px"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:layout_height="wrap_content"/>



    
<!--    <FrameLayout-->
<!--        android:layout_width="@dimen/off"-->
<!--        android:layout_height=""-->

</RelativeLayout>