<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.kotlin.android.ugc.detail.component.binder.UgcMovieSpoilerBinder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/offset_31px"
         >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@{data.spoiler}"
            android:id="@+id/spoilerTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/offset_30px"
            android:textColor="@color/color_8798af"
            android:textSize="@dimen/font_size_sp_11"
            android:paddingLeft="@dimen/offset_20px"
            android:paddingRight="@dimen/offset_20px"
            android:paddingTop="@dimen/offset_10px"
            android:paddingBottom="@dimen/offset_10px"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
