<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootRl"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/linkRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linkTitleCL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_98px">
        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/linkTypeTitleTv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/offset_30px"
            android:textColor="@color/color_1d2736"
            android:textSize="@dimen/offset_18sp"
            tools:text="关联影片"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/linkCloseIv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/offset_4px"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/offset_22px"
            android:src="@drawable/ic_close"
            android:tint="@color/color_1d2736"
            android:layout_width="@dimen/offset_48px"
            android:layout_height="@dimen/offset_48px"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    

</RelativeLayout>