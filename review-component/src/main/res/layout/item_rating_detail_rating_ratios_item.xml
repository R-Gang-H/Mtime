<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/offset_7px"
        android:paddingBottom="@dimen/offset_7px">

        <TextView
            android:id="@+id/item_rating_rations_title_tv"
            android:layout_width="@dimen/offset_80px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_30px"
            android:textColor="@color/color_4E5E73"
            android:textSize="16sp"
            tools:text="10æ˜Ÿ" />

        <ProgressBar
            android:id="@+id/item_rating_rations_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_15px"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/shape_item_rating_ratios_progress_bar" />

        <TextView
            android:id="@+id/item_rating_rations_value_tv"
            android:layout_width="@dimen/offset_66px"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/offset_30px"
            android:gravity="right"
            android:textColor="@color/color_8798af"
            android:textSize="10sp"
            tools:text="12.5%" />

    </LinearLayout>

</layout>