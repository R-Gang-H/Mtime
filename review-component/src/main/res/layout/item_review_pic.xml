<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/offset_216px"
    android:layout_height="@dimen/offset_216px"
    android:layout_marginLeft="@dimen/offset_20px"
    app:cardCornerRadius="@dimen/offset_8px">

    <!--    展示海报-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/picIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!--    选择按钮-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selectBtn"
        android:layout_width="@dimen/offset_46px"
        android:layout_height="@dimen/offset_46px"
        android:layout_gravity="bottom|right"
        android:visibility="gone"
        android:src="@drawable/ic_check_orange"
        android:layout_margin="@dimen/offset_18px" />

</androidx.cardview.widget.CardView>