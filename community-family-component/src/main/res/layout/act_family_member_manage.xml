<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchMatch"
        >

        <!-- Tab -->
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/mActFamilyMemberManageTabLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_88px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/color_47505c"
            app:stl_indicatorCornerRadius="0dp"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="32dp"
            app:stl_indicatorWithoutPadding="true"
            app:stl_customTabTextLayoutId="@layout/view_tab_item"
            app:stl_customTabTextViewId="@id/mTabTextView"
            app:stl_titleOffset="auto_center"
            app:stl_distributeEvenly="true"
            app:stl_underlineThickness="0dp"
            />

        <!-- 返回 -->
        <ImageView
            android:id="@+id/mActFamilyMemberManageBackIv"
            android:layout_width="@dimen/offset_27px"
            android:layout_height="@dimen/offset_40px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/offset_24px"
            android:layout_marginLeft="@dimen/offset_32px"
            android:src="@drawable/icon_back"
            />

        <!-- ViewPager -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mActFamilyMemberManageViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mActFamilyMemberManageTabLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>