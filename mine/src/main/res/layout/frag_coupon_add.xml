<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_75px"
        android:layout_marginRight="@dimen/offset_75px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_20px"
            android:text="@string/add_tip"
            android:textColor="@color/color_4e5e73"
            android:textSize="@dimen/offset_16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_90px"
            android:layout_marginLeft="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_20px"
            android:layout_marginRight="@dimen/offset_26px"
            android:background="@null"
            android:textColor="@color/color_4e5e73"
            android:textSize="@dimen/offset_16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_code_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_tip" />

        <TextView
            android:id="@+id/tv_pwd_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_20px"
            android:text="@string/add_pwd_tip"
            android:textColor="@color/color_4e5e73"
            android:textSize="@dimen/offset_16sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_code" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_90px"
            android:layout_marginLeft="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_20px"
            android:layout_marginRight="@dimen/offset_26px"
            android:background="@null"
            android:textColor="@color/color_4e5e73"
            android:textSize="@dimen/offset_16sp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pwd_tip" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_60px"
            android:layout_marginBottom="@dimen/offset_60px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/offset_220px"
                android:layout_height="@dimen/offset_60px"
                android:layout_marginLeft="@dimen/offset_30px"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_20a0da"
                android:textSize="@dimen/offset_15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/offset_220px"
                android:layout_height="@dimen/offset_60px"
                android:layout_marginRight="@dimen/offset_30px"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/offset_15sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>