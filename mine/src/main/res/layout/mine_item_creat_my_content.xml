<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.kotlin.android.mine.binder.MyContentBinder" />

    </data>

    <RelativeLayout
        android:id="@+id/rlFrameBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_144px"
        tools:layout_height="@dimen/offset_164px"
        tools:layout_width="@dimen/offset_144px">

        <TextView
            android:id="@+id/tvConImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/offset_22px"
            android:drawableTop="@{bean.data.conIcon}"
            android:gravity="center"
            android:text="@{bean.data.conName}"
            android:textColor="@color/color_8798af"
            android:textSize="@dimen/offset_12sp"
            tools:drawableTop="@drawable/ic_article"
            tools:text="文章" />

    </RelativeLayout>

</layout>