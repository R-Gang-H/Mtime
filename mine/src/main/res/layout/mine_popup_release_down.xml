<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rlPopupBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vArrow"
            android:layout_width="@dimen/offset_20px"
            android:layout_height="@dimen/offset_10px"
            android:layout_marginTop="@dimen/offset_8px"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/offset_30px"
            android:src="@color/color_ffffff" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vArrow"
            android:layout_marginEnd="@dimen/offset_10px"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/color_ffffff"
            app:cardCornerRadius="@dimen/offset_6dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="@dimen/offset_346px"
                android:layout_height="@dimen/offset_240px">

                <RelativeLayout
                    android:id="@+id/rlArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivArticle"
                        android:layout_width="@dimen/offset_60px"
                        android:layout_height="@dimen/offset_60px"
                        android:layout_marginStart="@dimen/offset_24px"
                        android:layout_marginTop="@dimen/offset_30px"
                        android:layout_marginBottom="@dimen/offset_30px"
                        android:src="@drawable/ic_article" />

                    <TextView
                        android:id="@+id/tvArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/offset_20px"
                        android:layout_marginTop="@dimen/offset_24px"
                        android:layout_toEndOf="@id/ivArticle"
                        android:gravity="center"
                        android:text="@string/mine_collection_article"
                        android:textColor="@color/color_303a47"
                        android:textSize="@dimen/offset_14sp" />

                    <TextView
                        android:id="@+id/tvArticleDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvArticle"
                        android:layout_alignStart="@id/tvArticle"
                        android:layout_marginTop="@dimen/offset_4px"
                        android:gravity="center"
                        android:text="@string/mine_share_articles"
                        android:textColor="@color/color_8798af"
                        android:textSize="@dimen/offset_11sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlArticle">

                    <ImageView
                        android:id="@+id/ivVideo"
                        android:layout_width="@dimen/offset_60px"
                        android:layout_height="@dimen/offset_60px"
                        android:layout_marginStart="@dimen/offset_24px"
                        android:layout_marginTop="@dimen/offset_30px"
                        android:layout_marginBottom="@dimen/offset_30px"
                        android:src="@drawable/ic_video" />

                    <TextView
                        android:id="@+id/tvVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/offset_20px"
                        android:layout_marginTop="@dimen/offset_22px"
                        android:layout_toEndOf="@id/ivVideo"
                        android:gravity="center"
                        android:text="@string/mine_content_tab_video"
                        android:textColor="@color/color_303a47"
                        android:textSize="@dimen/offset_14sp" />

                    <TextView
                        android:id="@+id/tvVideoDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvVideo"
                        android:layout_alignStart="@id/tvVideo"
                        android:layout_marginTop="@dimen/offset_4px"
                        android:gravity="center"
                        android:text="@string/mine_share_vidoes"
                        android:textColor="@color/color_8798af"
                        android:textSize="@dimen/offset_11sp" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>