<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mQrcodeLoginIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/offset_200px"
            android:src="@drawable/ic_qrcode_login_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mQrcodeLoginIv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/offset_38px"
            android:textSize="@dimen/offset_17sp"
            android:textColor="@color/color_303a47"
            android:text="@string/qrcode_login_hint"
            />

        <TextView
            android:id="@+id/mQrcodeLoginBtnCancelTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_70px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/offset_60px"
            android:layout_marginRight="@dimen/offset_60px"
            android:layout_marginBottom="@dimen/offset_200px"
            android:textSize="@dimen/offset_15sp"
            android:textColor="@color/color_303a47"
            android:text="@string/qrcode_login_btn_cancel"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/mQrcodeLoginBtnConfirmTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/offset_70px"
            app:layout_constraintBottom_toTopOf="@id/mQrcodeLoginBtnCancelTv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/offset_60px"
            android:layout_marginRight="@dimen/offset_60px"
            android:layout_marginBottom="@dimen/offset_20px"
            android:textSize="@dimen/offset_15sp"
            android:textColor="@color/color_ffffff"
            android:text="@string/qrcode_login_btn_confirm"
            android:textStyle="bold"
            android:gravity="center"
            android:bg_shape_color="@{@color/color_20a0da}"
            android:bg_shape_corner="@{15}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>