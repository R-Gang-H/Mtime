<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/mPlayerLoadingCoverLayout"
        android:layout_width="155dp"
        android:layout_height="101dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/video_layout_player_loading_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_player_loading"
            />

        <TextView
            android:id="@+id/video_layout_player_loading_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/player_loading_text"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp"
            />
    </LinearLayout>

</RelativeLayout>