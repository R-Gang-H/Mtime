<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName"
    >

    <data>
        <variable
            name="data"
            type="com.kotlin.android.search.newcomponent.ui.result.adapter.SearchResultAllTypeCountBinder"
            />
    </data>

    <TextView
        android:id="@+id/mItemSearchResultAllTypeTotalCountTv"
        style="@style/MatchWrap"
        android:paddingTop="@dimen/offset_30px"
        android:paddingBottom="@dimen/offset_30px"
        android:gravity="center_horizontal"
        android:textSize="@dimen/offset_12sp"
        android:textColor="@color/color_8798af"
        android:onClick="@{(view) -> data.onClick(view)}"
        tools:text="查看全部XX部影视"
        />

</layout>