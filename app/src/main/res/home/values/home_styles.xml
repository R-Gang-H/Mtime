<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <item name="home_feed_item_divider_v" type="id" />

    <style name="HomeFeedItemDivider">
        <item name="android:id">@id/home_feed_item_divider_v</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/home_divider_color_line</item>
    </style>

    <style name="HomeFeedTagTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HomeFeedTagAdTextStyle" parent="HomeFeedTagTextStyle">
        <item name="android:background">@drawable/shape_home_feed_list_ad_tag_bg</item>
    </style>

    <style name="HomeFeedTagStickTextStyle" parent="HomeFeedTagTextStyle">
        <item name="android:background">@drawable/shape_home_feed_list_stick_tag_bg</item>
    </style>

</resources>