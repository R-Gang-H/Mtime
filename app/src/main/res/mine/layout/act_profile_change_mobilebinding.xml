<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/unbind_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/title_bar_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unbind_mobile_tips_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbind_label"
            android:textColor="@color/color_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_0075c4"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/unbind_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unbind_btn_margin_top"
        android:background="@drawable/login_login_btn_icon"
        android:gravity="center"
        android:text="@string/upomp_bypay_editinfo"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>