<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/offset_335dp"
    android:layout_height="@dimen/offset_465dp"
    >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_175dp"
        tools:background="@drawable/dialog_member_center_update_level_title_diamond_bg"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_33dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dialog_member_center_update_level_title_icon"
            />

        <TextView
            android:id="@+id/tv_level_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_marginBottom="@dimen/offset_18dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_pxtosp_60"
            tools:text="钻石会员"
            />

        <TextView
            android:id="@+id/tv_level_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/offset_15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_pxtosp_32"
            tools:text="恭喜您！您已经升级到钻石会员"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/dialog_member_center_gift_content_white_bg"
        >

        <!-- 会员特权label -->
        <LinearLayout
            android:id="@+id/ll_right_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/offset_20dp"
            >

            <View
                android:layout_width="@dimen/offset_40dp"
                android:layout_height="@dimen/offset_0_5dp"
                android:background="@color/color_d8d8d8"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_5dp"
                android:src="@drawable/dialog_member_center_gift_content_diamond"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_9dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_pxtosp_24"
                android:text="@string/member_right"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_9dp"
                android:src="@drawable/dialog_member_center_gift_content_diamond"
                />

            <View
                android:layout_width="@dimen/offset_40dp"
                android:layout_height="@dimen/offset_0_5dp"
                android:layout_marginLeft="@dimen/offset_5dp"
                android:background="@color/color_d8d8d8"
                />

        </LinearLayout>

        <!-- 会员特权_第1行 -->
        <LinearLayout
            android:id="@+id/rl_list_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_right_label"
            android:layout_marginTop="@dimen/offset_20dp"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            >

            <!-- 图1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_level"
                    />

                <TextView
                    android:id="@+id/tv_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="130元当月礼包"
                    />

            </LinearLayout>

            <!-- 图2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_birth"
                    />

                <TextView
                    android:id="@+id/tv_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="140元当月礼包"
                    />

            </LinearLayout>

            <!-- 图3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_discount"
                    />

                <TextView
                    android:id="@+id/tv_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="购物9.0折"
                    />

            </LinearLayout>

        </LinearLayout>

        <!-- 会员特权_第2行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl_list_1"
            android:layout_marginTop="@dimen/offset_15dp"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            >

            <!-- 图4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_icon_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_free_fee"
                    />

                <TextView
                    android:id="@+id/tv_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="免运费"
                    />

            </LinearLayout>

            <!-- 图5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <ImageView
                    android:id="@+id/iv_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_return_mcoin"
                    />

                <TextView
                    android:id="@+id/tv_name_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="消费返币"
                    />

            </LinearLayout>

            <!-- 图6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <ImageView
                    android:id="@+id/iv_icon_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/dialog_diamond_activity"
                    />

                <TextView
                    android:id="@+id/tv_name_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offset_9dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/font_size_12sp"
                    tools:text="线下活动优先"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/offset_16dp"
            android:layout_marginRight="@dimen/offset_16dp"
            android:layout_marginBottom="@dimen/offset_10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_pxtosp_36"
            tools:background="@drawable/dialog_member_center_update_level_diamond_btn"
            android:text="@string/goto_member_club"
            />

    </RelativeLayout>

    <!-- 关闭图片 -->
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rl_title"
        android:padding="@dimen/offset_20dp"
        android:src="@drawable/dialog_member_center_close"
        />

</RelativeLayout>