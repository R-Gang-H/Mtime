<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical">

    <include
        android:id="@+id/navigationbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/title_bar_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_36px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_30px"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_30px" >

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_more" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/login_input_cancel_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_6px"
        android:background="@drawable/line_bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_10dp"
        android:text="@string/edit_nick_name_tip"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_small_high" />

    <!-- 因为后台暂时不支持，所以app端临时注释掉这个显示，实现后再去掉gone属性-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_10dp"
        android:text="个人昵称在90天内只能修改一次，请谨慎修改!"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_small_high"
        android:visibility="gone"/>

</LinearLayout>