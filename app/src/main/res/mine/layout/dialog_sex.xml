<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset_pxtodx_80"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/offset_pxtodx_40"
        android:paddingBottom="@dimen/offset_pxtodx_42"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_normal_high"
        android:text="@string/str_dlg_sex_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_pxtodx_40"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dlg_sex_male_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/offset_pxtodx_25"
                android:src="@drawable/boy">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_1e67bd"
                android:textSize="@dimen/font_size_normal_high_more"
                android:text="@string/str_male" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dlg_sex_female_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/offset_pxtodx_25"
                android:src="@drawable/girl"
                >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_f06293"
                android:textSize="@dimen/font_size_normal_high_more"
                android:text="@string/str_female" />

        </LinearLayout>

    </LinearLayout>

    <!--分割线-->
    <View
        android:id="@+id/dlg_sex_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1px"
        android:background="@color/color_bbbbbb" />

    <TextView
        android:id="@+id/dlg_sex_nochoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/offset_pxtodx_29"
        android:paddingBottom="@dimen/offset_pxtodx_27"
        android:textColor="@color/black_color"
        android:textSize="@dimen/font_size_large"
        android:text="@string/str_dlg_sex_nochoose" />

</LinearLayout>
