<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:background="@color/color_d8d8d8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/offset_20dp"
            android:paddingBottom="@dimen/offset_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_pxtosp_34"
            android:text="@string/cancel"
            />

        <ImageView
            android:layout_width="@dimen/offset_1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/offset_10dp"
            android:layout_marginBottom="@dimen/offset_10dp"
            android:background="@color/color_d8d8d8"
            />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/offset_20dp"
            android:paddingBottom="@dimen/offset_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_pxtosp_34"
            android:text="@string/ok"
            />

    </LinearLayout>

</LinearLayout>