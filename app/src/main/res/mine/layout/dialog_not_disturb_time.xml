<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ebebeb"
        android:padding="@dimen/offset_34px" >

        <TextView
            android:id="@+id/dialog_not_disturb_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_high" />

        <TextView
            android:id="@+id/dialog_not_disturb_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_high" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.mtime.widgets.spinnerwheel.WheelVerticalView
            android:id="@+id/start_wheel"
            android:layout_width="@dimen/offset_184px"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/offset_40px"
            app:selectionDivider="@color/color_d8d8d8"
            app:selectionDividerWidth="1px" />

        <com.mtime.widgets.spinnerwheel.WheelVerticalView
            android:id="@+id/end_wheel"
            android:layout_width="@dimen/offset_184px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_40px"
            app:selectionDivider="@color/color_d8d8d8"
            app:selectionDividerWidth="1px" />
    </LinearLayout>

</LinearLayout>