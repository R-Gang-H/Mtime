<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/offset_30dp"
    android:paddingRight="@dimen/offset_30dp"
    >

    <!-- 短信验证码登录标题-->
    <TextView
        android:id="@+id/fragment_login_sms_code_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/color_1D2736"
        android:textSize="22sp"
        android:text="@string/login_sms_title"
        />

    <!-- 短信验证码登录组件 -->
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_sms_code_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/offset_30dp"
        layout="@layout/login_sms_code_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>