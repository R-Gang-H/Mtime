<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg_selector">

    <LinearLayout
        android:id="@+id/company_movie_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_12dp"
            android:paddingTop="7dp"
            android:src="@drawable/company_list_item_bg" />

        <TextView
            android:id="@+id/company_movie_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_12dp"
            android:textColor="@color/text_blue"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/company_list_item_line"
        android:layout_width="1dp"
        android:layout_height="163dp"
        android:layout_below="@+id/company_movie_top"
        android:layout_marginLeft="16.3dp"
        android:src="@drawable/company_list_item_line" />

    <LinearLayout
        android:id="@+id/layout_top_detail_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_movie_top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="@dimen/offset_34px"
        android:layout_marginTop="@dimen/offset_17dp"
        android:layout_toRightOf="@+id/company_list_item_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/company_movie_img"
            android:layout_width="@dimen/offset_82dp"
            android:layout_height="@dimen/offset_123_5dp"
            android:background="@drawable/image_border"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/offset_1px"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_17dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/topmovie_item_name_maxlength"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_normal_high" />

                <TextView
                    android:id="@+id/company_movie_score"
                    android:layout_width="@dimen/offset_22_5dp"
                    android:layout_height="@dimen/offset_20dp"
                    android:layout_marginLeft="@dimen/offset_7dp"
                    android:background="@color/score_color"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/company_movie_nameen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_10px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_bbbbbb"
                android:textSize="@dimen/font_size_small_more" />

            <TextView
                android:id="@+id/company_movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_34px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/st_director"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_small_more" />

            <TextView
                android:id="@+id/company_movie_starring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/st_leading"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_small_more" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_movie_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/st_show_time"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_small_more" />

                <TextView
                    android:id="@+id/company_movie_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_small_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_top_detail_movie"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/offset_34px"
        android:layout_toRightOf="@+id/company_list_item_line"
        android:background="@color/color_d8d8d8" />
</RelativeLayout>