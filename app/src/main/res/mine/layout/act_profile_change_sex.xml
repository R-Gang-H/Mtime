<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical">

    <include
        android:id="@+id/navigationbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        layout="@layout/title_bar_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_account_height"
        android:layout_marginTop="@dimen/offset_40px"
        android:background="@drawable/listview_item_bg_selector" >

        <LinearLayout
            android:id="@+id/ll_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_account_icon_margin_left"
                android:layout_weight="1"
                android:drawableLeft="@drawable/oval_selected_height_50"
                android:drawablePadding="@dimen/offset_16px"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/offset_30px"
                android:paddingTop="@dimen/offset_30px"
                android:text="@string/str_male"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal_high" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1px"
            android:layout_alignLeft="@id/nickname_item_label"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/color_d8d8d8"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_account_height"
        android:background="@drawable/listview_item_bg_selector" >

        <LinearLayout
            android:id="@+id/ll_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_account_icon_margin_left"
                android:layout_weight="1"
                android:drawableLeft="@drawable/oval_normal_height_50"
                android:drawablePadding="@dimen/offset_16px"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/offset_30px"
                android:paddingTop="@dimen/offset_30px"
                android:text="@string/str_female"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal_high" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_6px"
        android:background="@drawable/line_bottom" />

</LinearLayout>