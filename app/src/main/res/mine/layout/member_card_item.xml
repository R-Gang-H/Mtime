<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_back_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_8dp"
        android:layout_marginRight="@dimen/offset_8dp"
        android:layout_marginTop="@dimen/offset_4dp"
        android:background="@drawable/gray_top"
        android:minHeight="80dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_8dp"
            android:layout_marginRight="@dimen/offset_8dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_8dp"
                android:layout_marginTop="@dimen/offset_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offset_8dp"
                android:layout_marginTop="@dimen/offset_8dp"
                android:background="@drawable/member_card_use"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="@string/str_use_detail"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cardType"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/offset_8dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_4dp"
        android:layout_marginLeft="@dimen/offset_8dp"
        android:layout_marginRight="@dimen/offset_8dp"
        android:background="@drawable/white_bottom"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cinemaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_8dp"
            android:layout_marginLeft="@dimen/offset_8dp"
            android:layout_marginRight="@dimen/offset_8dp"
            android:layout_marginTop="@dimen/offset_8dp"
            android:minHeight="20dp"
            android:minWidth="40dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/offset_4dp"
                android:gravity="right"
                android:textColor="@color/black_color"
                android:textSize="@dimen/font_size_normal_high" />

            <TextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/offset_4dp"
                android:gravity="right"
                android:textColor="@color/black_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>