<resources>
    <style name="player_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- white -->
    <style name="player_text_white_high" parent="player_text_base">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/player_text_size_big</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="player_text_white_middle" parent="player_text_base">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/player_text_size_middle</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<style name="text_white_middle" parent="text_base">-->
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:textSize">@dimen/player_text_size_middle</item>-->
    <!--</style>-->

    <!--&lt;!&ndash; orange middle&ndash;&gt;-->
    <!--<style name="text_orange_middle" parent="text_base">-->
        <!--<item name="android:textColor">@color/player_text_orange</item>-->
        <!--<item name="android:textSize">@dimen/player_text_size_middle</item>-->
    <!--</style>-->

    <style name="icon_player">
        <item name="android:layout_width">@dimen/player_icon_width</item>
        <item name="android:layout_height">@dimen/player_icon_width</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="video_vertical_progressBar">
        <item name="android:maxWidth">12dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/player_sdk_volume_progress_bg</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="video_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/video_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="video_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!--网络弹框-->
    <style name="NetworkChangeDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>
