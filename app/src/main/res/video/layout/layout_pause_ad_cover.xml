<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/layout_pause_ad_cover_container_rl"
        android:layout_width="390dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_ad_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/collections_default"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/layout_pause_ad_cover_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/player_cover_ad_shape_ad_tag"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text=""/>
        <ImageView
            android:id="@+id/iv_close_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_loading_ad_close"/>
    </RelativeLayout>

</RelativeLayout>