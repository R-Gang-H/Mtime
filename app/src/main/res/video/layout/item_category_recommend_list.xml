<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="11dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/item_category_recommend_list_cover_bg_rl"
            android:layout_width="112dp"
            android:layout_height="68dp"
            >
            <ImageView
                android:id="@+id/item_category_recommend_list_cover_iv"
                android:layout_width="108dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_category_video_list_play"/>
            <TextView
                android:id="@+id/item_category_recommend_list_time_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:text="01:49"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">
            <TextView
                android:id="@+id/item_category_recommend_list_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""/>
            <TextView
                android:id="@+id/item_category_recommend_list_play_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"
                android:textSize="11sp"
                android:textColor="#999999"
                android:maxLines="1"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>