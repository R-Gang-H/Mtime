<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_e1ffffff" >

    <RelativeLayout
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_share_line_margin_top" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/str_share"
            android:textColor="@color/color_movie_main_333333"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/offset_10dp"
            android:background="@drawable/share_for_video"
            android:contentDescription="@string/app_name" />


        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d8d8d8"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/share_first_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_title"
        android:layout_marginTop="@dimen/act_share_part_margin_top"
        android:orientation="horizontal"
        android:weightSum="4" >


        <TextView
            android:id="@+id/share_weixin_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/logo_weixin_friend"
            android:gravity="center"
            android:text="@string/share_wechatfriend"
            android:textColor="@color/color_777777"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/share_weichat_world"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/logo_wechat"
            android:gravity="center"
            android:text="@string/share_micromessage"
            android:textColor="@color/color_777777"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/share_weibo_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/logo_sinaweibo"
            android:gravity="center"
            android:text="@string/share_weibosina"
            android:textColor="@color/color_777777"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/share_qq_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/logo_qq"
            android:gravity="center"
            android:text="@string/share_qq"
            android:textColor="@color/color_777777"
            android:textSize="13sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_share_part_margin_top"
        android:layout_below="@id/share_first_part"
        android:background="@null"
        android:contentDescription="@string/app_name" />

</RelativeLayout>