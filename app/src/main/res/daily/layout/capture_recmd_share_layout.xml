<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iv_dlg_daily_poster_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0px"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recmd_share_poster_iv"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            tools:src="@drawable/default_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/offset_12dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/offset_12dp">

            <ImageView
                android:id="@+id/recmd_share_qr_iv"
                android:layout_width="@dimen/offset_65dp"
                android:layout_height="@dimen/offset_65dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/recmd_share_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_2dp"
                android:layout_toLeftOf="@id/recmd_share_qr_iv"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                tools:text="人生美妙的关键，就在于你能迷" />

            <TextView
                android:id="@+id/recmd_share_subtitle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recmd_share_title_tv"
                android:layout_marginTop="@dimen/offset_5dp"
                android:layout_toLeftOf="@id/recmd_share_qr_iv"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/offset_13sp"
                tools:text="《银翼杀手2049》2018.04.30 中国上映" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>