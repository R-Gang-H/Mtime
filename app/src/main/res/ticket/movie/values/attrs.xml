<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MovieScoreSeekBar">
        <attr name="android:progressDrawable" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />
        <attr name="android:foreground" />

        <!-- 是否显示数字 -->
        <attr name="showText" format="boolean" />
        <!-- 分段数量 -->
        <attr name="segmentCount" format="integer|reference" />
        <!-- 圆角-->
        <attr name="cornerRadius" format="dimension|reference" />
        <!-- 每两个分段之间的间距 -->
        <attr name="segmentPadding" format="dimension|reference" />
    </declare-styleable>

</resources>