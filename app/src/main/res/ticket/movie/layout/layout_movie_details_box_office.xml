<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="30dp">

    <!-- 票房 -->

    <com.mtime.bussiness.common.widget.CommonItemTitleView
        android:id="@+id/movie_details_box_office_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:itv_title_text="@string/movie_details_box_office_title"
        app:itv_all_text="@string/movie_details_box_office_title_all"
        />

    <LinearLayout
        android:id="@+id/movie_details_box_office_content_ll"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/movie_details_box_office_title_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_movie_details_box_office_bg"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/movie_details_box_office_num1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:textSize="26sp"
                android:textColor="#20a0da"
                tools:text="3"
                />

            <TextView
                android:id="@+id/movie_details_box_office_sub_title1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:lines="1"
                android:textColor="#4e5e73"
                android:textSize="14sp"
                android:text="@string/movie_details_box_office_title2"
                />

        </FrameLayout>

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/movie_details_box_office_num2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:textSize="26sp"
                android:textColor="#20a0da"
                tools:text="55.5"
                />

            <TextView
                android:id="@+id/movie_details_box_office_sub_title2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:lines="1"
                android:textColor="#4e5e73"
                android:textSize="14sp"
                tools:text="今日票房 (万)"
                />

        </FrameLayout>

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/movie_details_box_office_num3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:textSize="26sp"
                android:textColor="#20a0da"
                tools:text="33.33"
                />

            <TextView
                android:id="@+id/movie_details_box_office_sub_title3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:lines="1"
                android:textColor="#4e5e73"
                android:textSize="14sp"
                tools:text="累计票房 (亿)"
                />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>