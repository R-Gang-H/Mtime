    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- title -->
    <include
        android:id="@+id/activity_movie_global_boxoffice_title_layout"
        layout="@layout/layout_movie_sub_page_title"
        />

    <!-- 票房榜内容 -->
    <FrameLayout
        android:id="@+id/activity_movie_global_boxoffice_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_movie_global_boxoffice_title_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>