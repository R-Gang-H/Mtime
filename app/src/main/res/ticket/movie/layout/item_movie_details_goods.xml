<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="15dp">
    
    <ImageView
        android:id="@+id/movie_details_goods_poster_iv"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/default_image"
        />

    <TextView
        android:id="@+id/movie_details_goods_new_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/movie_details_goods_poster_iv"
        app:layout_constraintRight_toRightOf="@id/movie_details_goods_poster_iv"
        android:textColor="#ffffff"
        android:textSize="10sp"
        tools:text="新品"
        android:background="@drawable/shape_movie_details_goods_new_tag_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        />

    <TextView
        android:id="@+id/movie_details_goods_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_details_goods_poster_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/movie_details_goods_poster_iv"
        android:layout_marginTop="15dp"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#303a47"
        tools:text="24寸哥斯拉怪兽之王模型"
        />

    <TextView
        android:id="@+id/movie_details_goods_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_details_goods_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="#ff5a36"
        android:textStyle="bold"
        tools:text="￥899"
        />

    <TextView
        android:id="@+id/movie_details_goods_ziying_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/movie_details_goods_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/movie_details_goods_price_tv"
        app:layout_constraintRight_toRightOf="@id/movie_details_goods_name_tv"
        android:background="@drawable/shape_movie_details_goods_ziying_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1.5dp"
        android:paddingBottom="1.5dp"
        android:textSize="10sp"
        android:textColor="#20a0da"
        android:text="自营"
        />

</androidx.constraintlayout.widget.ConstraintLayout>