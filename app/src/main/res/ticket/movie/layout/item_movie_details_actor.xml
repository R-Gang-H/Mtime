<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_movie_details_actor_poster_iv"
        android:layout_width="80dp"
        android:layout_height="119dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/default_image"
        />

    <TextView
        android:id="@+id/item_movie_details_actor_name_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_movie_details_actor_poster_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#303a47"
        android:textSize="14sp"
        tools:text="迈克尔·道迈克尔·道"
        />

    <TextView
        android:id="@+id/item_movie_details_actor_en_name_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_movie_details_actor_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#8798af"
        android:textSize="12sp"
        tools:text="Michael DoMichael Do"
        />

    <TextView
        android:id="@+id/item_movie_details_actor_role_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_movie_details_actor_en_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#8798af"
        android:textSize="12sp"
        tools:text="导演"
        />

</androidx.constraintlayout.widget.ConstraintLayout>