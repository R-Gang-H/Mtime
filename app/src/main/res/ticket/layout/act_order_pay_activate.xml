<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical" >

    <include
        android:id="@+id/navigationbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_bar_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_40px"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/order_pay_activate_add_vouchercode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_item_bg_selector"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/offset_40px"
            android:paddingLeft="@dimen/offset_34px"
            android:paddingRight="@dimen/offset_34px"
            android:paddingTop="@dimen/offset_40px" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/str_add_vouchercode"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal_high" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_arrow_r" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1px"
            android:layout_marginLeft="@dimen/offset_34px"
            android:background="@color/color_d8d8d8" />

        <LinearLayout
            android:id="@+id/order_pay_activate_add_moviecard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_item_bg_selector"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/offset_40px"
            android:paddingLeft="@dimen/offset_34px"
            android:paddingRight="@dimen/offset_34px"
            android:paddingTop="@dimen/offset_40px" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/str_add_moviecard"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal_high" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_arrow_r" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_6px"
        android:background="@drawable/line_bottom" />

</LinearLayout>