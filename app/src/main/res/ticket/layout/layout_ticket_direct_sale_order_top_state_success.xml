<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/layout_ticket_direct_sale_order_top_state_success_top_info_tv"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="到影城自助取票机取票，以手机短信取票码为准"
        android:textSize="13sp"
        android:textColor="@color/ticket_light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:layout_below="@id/layout_ticket_direct_sale_order_top_state_success_top_info_tv">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1dp"
            android:background="@drawable/ticket_code_line"/>
        <LinearLayout
            android:id="@+id/layout_ticket_direct_sale_order_top_state_success_one_code_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/font_size_15sp"
                android:textColor="@color/ticket_dark_gray"
                android:text="取票码"/>
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_top_state_success_ticket_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/offset_26dp"
                android:textColor="@color/ticket_dark_red"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ticket_direct_sale_order_top_state_success_more_code_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_top_state_success_code_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/font_size_15sp"
                android:textColor="@color/ticket_dark_gray"
                android:text="取票码"/>
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_top_state_success_code_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/font_size_15sp"
                android:textColor="@color/ticket_dark_gray"
                android:text="取票码"/>
        </LinearLayout>

        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_top_state_success_user_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/font_size_15sp"
            android:textColor="@color/ticket_dark_gray"
            android:text=""/>

        <ImageView
            android:id="@+id/layout_ticket_direct_sale_order_top_state_success_qr_code_iv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ticket_code_line"/>
    </LinearLayout>

</RelativeLayout>