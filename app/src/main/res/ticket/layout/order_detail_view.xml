<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="@dimen/offset_30px"
    >

    <!-- 订单号 -->
    <LinearLayout
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_22px"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_22px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_order_number"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/textOrder"
            android:layout_width="@dimen/offset_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/textOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/offset_30px"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ticket_code_line"/>

    <!-- 影片：黄金时代 -->
    <TextView
        android:id="@+id/movieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_30px"
        android:paddingLeft="@dimen/offset_30px"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_large"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_17px"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/offset_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_str"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>
        <!-- 9月20日 星期六 16：45 -->
        <TextView
            android:id="@+id/movieInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:textColor="@color/color_f97d3f"
            android:textSize="@dimen/font_size_normal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_18px"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingBottom="@dimen/offset_30px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_str"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/seat_line_one_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seat_one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"/>

                <TextView
                    android:id="@+id/seat_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"/>

                <TextView
                    android:id="@+id/seat_three_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"/>

                <TextView
                    android:id="@+id/seat_four_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/hall_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/seat_line_two_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/offset_10px">

                <TextView
                    android:id="@+id/seat_five_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"/>

                <TextView
                    android:id="@+id/seat_six_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:background="@drawable/seat_bg"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_13sp"/>

                <TextView
                    android:id="@+id/hall_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_10px"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ticket_code_line"/>

    <LinearLayout
        android:id="@+id/small_pay_info_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/offset_15px"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_package"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_15sp"/>

        <com.mtime.bussiness.ticket.movie.widget.MyListView
            android:id="@+id/small_pay_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            ></com.mtime.bussiness.ticket.movie.widget.MyListView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ticket_code_line"/>
    <!-- 有小卖时显示 begin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/small_pay_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dkgkjgrkihghejehgj"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal"
            android:visibility="gone"/>

        <!-- 小卖: 28 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_22px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_discount_package"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_money"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 有小卖时显示 end -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_20px"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_20px"
        android:paddingLeft="@dimen/offset_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_total_price"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_money"
            android:textColor="@color/color_f97d3f"
            android:textSize="@dimen/font_size_large"/>

        <TextView
            android:id="@+id/textMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="106"
            android:textColor="@color/color_f97d3f"
            android:textSize="@dimen/font_size_large"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ticket_code_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_24px"
        android:paddingLeft="@dimen/offset_30px"
        android:paddingRight="@dimen/offset_30px"
        android:paddingTop="@dimen/offset_24px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_str"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/order_detail_view_worktime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_4px"
                tools:text="@string/str_worktime"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/hot_tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4006059500"
            android:textColor="@color/color_f97d3f"
            android:textSize="@dimen/font_size_15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_20px"
        android:background="@color/color_f2f2f2"/>

    <!-- 订单信息接收手机号：购票成功时会显示出来 -->
    <LinearLayout
        android:id="@+id/phone_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_34px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_order_info_sink_phone"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/order_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_34px"
                android:textColor="@color/color_ff8600"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_20px"
            android:background="@color/color_f2f2f2"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/order_detail_view_real_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- 实名身份列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_detail_view_real_name_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_ticket_real_name"
            tools:itemCount="2"
            />

        <!-- 分隔条 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_10dp"
            android:background="@color/color_f2f2f2"
            android:layout_below="@+id/order_detail_view_real_name_rv"
            />

    </RelativeLayout>

    <!-- 影院名，地址，地图按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/offset_30px">

        <LinearLayout
            android:id="@+id/layout_order_detail_cinema"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_large"/>

            <TextView
                android:id="@+id/info_title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_5dp"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/font_size_small_high"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/offset_1px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/offset_40px"
            android:layout_marginRight="@dimen/offset_40px"
            android:background="@color/color_d8d8d8"/>

        <TextView
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/goto_map"/>
    </LinearLayout>

</LinearLayout>