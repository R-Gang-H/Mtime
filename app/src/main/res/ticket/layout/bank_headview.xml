<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/offengo_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/offset_10px"
            android:paddingLeft="@dimen/offset_34px"
            android:paddingTop="@dimen/offset_10px"
            android:text="@string/st_now_use"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_small_high" />

        <LinearLayout
            android:id="@+id/offengo_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/offset_10px"
            android:paddingLeft="@dimen/offset_20px"
            android:paddingRight="@dimen/offset_20px"
            android:paddingTop="@dimen/offset_10px" >

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_16px"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_normal_high" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_6px"
            android:background="@drawable/line_bottom" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/offset_10px"
        android:paddingLeft="@dimen/offset_34px"
        android:paddingTop="@dimen/offset_10px"
        android:text="全部银行"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_small_high" />

</LinearLayout>