        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!-- 我猜游戏 -->
    <include
        android:id="@+id/quiz_game"
        layout="@layout/view_quiz_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <!-- playing..... -->
    <include
        android:id="@+id/actor_hot_playing"
        layout="@layout/view_actor_hot_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
