<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/appraisebottombackground">

    <!-- unlike -->
    <TextView
        android:id="@+id/unlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/offset_18dp"
        android:text="不喜欢"
        android:textSize="10sp"
        android:textColor="@color/color_777777"
        android:drawableTop="@drawable/actor_detail_unlike_base" />

    <!-- like -->
    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="喜欢"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/unlike"
        android:layout_marginRight="@dimen/offset_18dp"
        android:textSize="10sp"
        android:textColor="@color/color_777777"
        android:drawableTop="@drawable/actor_detail_like_base" />

    <!-- 提示框-->
    <TextView
        android:id="@+id/appraise_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_background"
        android:hint="@string/str_comment_hit_tips"
        android:textColorHint="@color/color_bbbbbb"
        android:gravity="center_vertical|left"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:paddingLeft="@dimen/offset_10dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/like"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/offset_18dp"/>

</RelativeLayout>