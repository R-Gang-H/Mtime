<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/offset_30dp"
        android:paddingTop="@dimen/offset_30dp"
        android:textColor="@color/color_f97d3f"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pay_not_complate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_34px"
        android:gravity="center"
        android:paddingBottom="@dimen/offset_30dp"
        android:paddingTop="@dimen/offset_30dp"
        android:textColor="@color/color_f97d3f"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/offset_28px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ticket_timer_line"
            android:drawablePadding="@dimen/offset_10px"
            android:drawableRight="@drawable/ticket_timer_line"
            android:gravity="right|bottom"
            android:text="@string/str_timer"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_small_high" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/offset_30px"
            android:paddingLeft="@dimen/offset_10dp"
            android:paddingRight="@dimen/offset_10dp"
            android:paddingTop="@dimen/offset_18px">

            <TextView
                android:id="@+id/textMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f97d3f"
                android:textSize="@dimen/font_size_xxlarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:text="@string/str_minutes"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/textSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f97d3f"
                android:textSize="@dimen/font_size_xxlarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:text="@string/str_second"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_f97d3f"
            android:paddingBottom="@dimen/offset_24px"
            android:paddingTop="@dimen/offset_24px"
            android:text="@string/str_cancel_order"
            android:textSize="@dimen/font_size_15sp" />

        <TextView
            android:id="@+id/btn_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/offset_12dp"
            android:paddingTop="@dimen/offset_12dp"
            android:text="@string/str_pay_text"
            android:textColor="@color/color_f97d3f"
            android:textSize="@dimen/font_size_15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_20px"
        android:background="@color/color_f2f2f2" />

</LinearLayout>