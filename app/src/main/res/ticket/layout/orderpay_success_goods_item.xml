<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ebebeb"
    android:orientation="vertical"
    android:padding="@dimen/offset_6px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goods_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/offset_pxtodx_356"
                android:minWidth="@dimen/offset_pxtodx_356" />

            <TextView
                android:id="@+id/goods_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_pxtosp_22" />

        </RelativeLayout>

        <TextView
            android:id="@+id/goods_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="@dimen/offset_28px"
            android:paddingRight="@dimen/offset_28px"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_pxtosp_26" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/offset_28px"
            android:paddingRight="@dimen/offset_28px">

            <TextView
                android:id="@+id/goods_item_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_pxtosp_22" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_1dp"
                android:layout_alignLeft="@id/goods_item_marketprice"
                android:layout_alignRight="@id/goods_item_marketprice"
                android:layout_centerVertical="true"
                android:background="@color/color_979797" />
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/offset_28px"
            android:paddingRight="@dimen/offset_28px"
            android:textColor="@color/color_FF8600"
            android:textSize="@dimen/font_size_pxtosp_30" />
    </LinearLayout>
</LinearLayout>

