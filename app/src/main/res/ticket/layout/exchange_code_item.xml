<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/offset_5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exchange_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/st_exchange"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_high"
            />

        <TextView
            android:id="@+id/exchange_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=" 1234 56"
            android:textColor="@color/color_ff8600"
            android:textSize="21sp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>


</LinearLayout>