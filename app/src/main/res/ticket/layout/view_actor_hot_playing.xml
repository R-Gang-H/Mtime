<?xml version="1.0" encoding="utf-8"?>
<com.mtime.bussiness.ticket.movie.widget.ActorHotPlayingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/actor_hotplaying_seperate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1px"
            android:background="@color/color_d8d8d8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_24px"
            android:background="@color/color_f2f2f2" />
    </LinearLayout>

    <TextView
        android:id="@+id/hot_playing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/actor_hotplaying_seperate"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_marginTop="@dimen/offset_12dp"
        android:gravity="center"
        android:text="@string/actor_detail_hot_play_label"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/hot_playing_header"
        android:layout_width="@dimen/actor_detail_hot_playing_header_width"
        android:layout_height="@dimen/actor_detail_hot_playing_header_height"
        android:layout_alignLeft="@id/hot_playing_title"
        android:layout_below="@id/hot_playing_title"
        android:layout_marginTop="@dimen/offset_12dp"
        android:background="@color/color_d8d8d8"
        android:contentDescription="@string/app_name"
        android:padding="1px"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/hot_playing_movie_title_region"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/hot_playing_mvoie_title_region_height"
        android:layout_alignTop="@id/hot_playing_header"
        android:layout_marginLeft="@dimen/actor_detail_hot_playing_movie_title_margin_left"
        android:layout_toRightOf="@id/hot_playing_header" >

        <TextView
            android:id="@+id/hot_playing_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hot_playing_grade"
            android:layout_width="@dimen/my_order_remind_movie_grade_width"
            android:layout_height="@dimen/my_order_remind_movie_grade_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/actor_detail_hot_playing_grade_margin_left"
            android:layout_toRightOf="@id/hot_playing_movie_title"
            android:background="@color/color_6f9d0e"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hot_playing_movie_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hot_playing_movie_title_region"
        android:layout_below="@id/hot_playing_movie_title_region"
        android:layout_marginTop="@dimen/actor_detail_hot_playing_movie_type_margin_top"
        android:textColor="@color/color_777777"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/hot_playing_movie_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hot_playing_movie_type"
        android:layout_below="@id/hot_playing_movie_type"
        android:layout_marginTop="@dimen/actor_detail_hot_playing_movie_play_margin_top"
        android:textColor="@color/color_333333"
        android:textSize="13sp" />

    <!-- ticket value -->

    <TextView
        android:id="@+id/hot_playing_ticket_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_playing_header"
        android:layout_alignLeft="@id/hot_playing_movie_type"
        android:text="@string/actor_detail_hot_playing_mark"
        android:textColor="@color/orange"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/hot_playing_ticket_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_playing_header"
        android:layout_marginBottom="@dimen/actor_detail_hot_playing_ticket_value_margin_bottom"
        android:layout_toRightOf="@id/hot_playing_ticket_mark"
        android:gravity="bottom"
        android:textColor="@color/color_ff8600"
        android:textSize="27sp"
        tools:text="5"
        />

    <TextView
        android:id="@+id/hot_playing_ticket_lowest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_playing_header"
        android:layout_toRightOf="@id/hot_playing_ticket_value"
        android:text="@string/actor_detail_hot_playing_postfix"
        android:textColor="@color/color_ff8600"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/hot_playing_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/offset_pxtodx_60"
        android:layout_alignBottom="@id/hot_playing_header"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/actor_detail_item_margin_right"
        android:gravity="center"
        android:background="@drawable/actor_detail_hot_playing_buy_icon"
        android:text="@string/actor_detail_buy_ticket"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_12dp"
        android:layout_below="@id/hot_playing_header"
        android:background="#00000000"
        android:contentDescription="@string/app_name" />
</com.mtime.bussiness.ticket.movie.widget.ActorHotPlayingView>