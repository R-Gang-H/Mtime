<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_ticket_direct_sale_order_info_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_info_order_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/ticket_light_gray"
            android:text=""/>
        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_info_order_state_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="@color/ticket_light_gray"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ticket_code_line"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_below="@id/layout_ticket_direct_sale_order_info_title_rl">
        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_info_movie_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/ticket_light_dark"
            android:text=""/>
        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_info_play_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textColor="@color/ticket_light_gray"
            android:text=""/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_info_seat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textColor="@color/ticket_light_gray"
                android:text="座位："/>
            <include
                layout="@layout/layout_ticket_direct_seat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/layout_ticket_direct_sale_order_info_seat_tv"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ticket_code_line"/>
        <TextView
            android:id="@+id/layout_ticket_direct_sale_order_info_price_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textSize="15sp"
            android:textColor="@color/ticket_light_gray"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_1dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/ticket_code_line"/>
        <RelativeLayout
            android:id="@+id/layout_ticket_direct_sale_order_platform_service_info_rl"
            android:layout_width="match_parent"
            android:layout_height="51dp">
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_platform_service_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/ticket_light_dark"
                android:text=""/>
            <TextView
                android:id="@+id/layout_ticket_direct_sale_order_platform_service_telephone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/ticket_dark_red"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>