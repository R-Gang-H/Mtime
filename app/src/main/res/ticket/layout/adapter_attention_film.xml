<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/offset_pxtodx_206"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/offset_pxtodx_20"
              android:layout_marginRight="@dimen/offset_pxtodx_4"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/releas_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_11sp"
            tools:text="4月5日"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_pxtodx_1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/offset_pxtodx_10"
            android:background="@color/color_dddddd"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/offset_pxtodx_10"
        app:cardCornerRadius="@dimen/offset_8px"
        app:cardElevation="0px"
        app:cardUseCompatPadding="false"
        >

    <RelativeLayout
        android:layout_width="@dimen/offset_pxtodx_200"
        android:layout_height="@dimen/offset_pxtodx_300"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_dddddd"/>

        <com.mtime.widgets.NetworkImageView
            android:id="@+id/film_img"
            android:layout_width="@dimen/offset_pxtodx_198"
            android:layout_height="@dimen/offset_pxtodx_298"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_image"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_pxtodx_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_small_high"
        tools:text="天使"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_pxtodx_10">

        <TextView
            android:id="@+id/want_see_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_small_high"
            tools:text="21,055人想看"/>

        <ImageView
            android:id="@+id/icon_wantseen"
            android:layout_width="@dimen/offset_pxtodx_30"
            android:layout_height="@dimen/offset_pxtodx_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/offset_pxtodx_10"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_want_see"/>

    </RelativeLayout>


</LinearLayout>