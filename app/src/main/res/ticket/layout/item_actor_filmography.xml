<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_actor_filmgraphy_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actor_portfilo_year_background"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/groupto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/offset_pxtodx_16"
            android:paddingLeft="@dimen/offset_pxtodx_34"
            android:paddingTop="@dimen/offset_pxtodx_16"
            android:textColor="@color/color_movie_main_999999"
            android:textSize="@dimen/font_size_pxtosp_28" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_bg_selector">

        <ImageView
            android:id="@+id/header"
            android:layout_width="@dimen/offset_82dp"
            android:layout_height="@dimen/offset_124dp"
            android:layout_marginLeft="@dimen/title_bar_search_back_margin_left"
            android:layout_marginTop="@dimen/title_bar_search_back_margin_left"
            android:background="@drawable/image_border"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/offset_pxtodx_1"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="@dimen/title_bar_search_back_margin_left"
            android:layout_below="@id/header"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/movie_label_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/header"
            android:layout_marginLeft="@dimen/title_bar_search_back_margin_left"
            android:layout_marginRight="@dimen/title_bar_search_back_margin_left"
            android:layout_toRightOf="@id/header"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 作品名 -->

            <TextView
                android:id="@+id/movie_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="@dimen/actor_film_portfoilo_label_max_width"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="16.5sp" />

            <TextView
                android:id="@+id/movie_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_6px"
                android:background="@drawable/long_comments_user_rate_icon"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/movie_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/movie_label_score"
            android:layout_below="@id/movie_label_score"
            android:layout_marginTop="@dimen/my_order_remind_movie_actors_lines_space"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/color_777777"
            android:textSize="13.5sp" />

        <LinearLayout
            android:id="@+id/awards_show_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/movie_actor"
            android:layout_alignParentRight="true"
            android:layout_below="@id/movie_actor"
            android:layout_marginRight="@dimen/actor_detail_listview_item_time_margin_right"
            android:layout_marginTop="@dimen/actor_detail_poster_ratemark_margin_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_awards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/actor_detail_poster_ratemark_margin_right"
                android:lineSpacingExtra="2dp"
                android:singleLine="false"
                android:textColor="@color/color_333333"
                android:textSize="13.5sp" />

            <TextView
                android:id="@+id/awards_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_6px"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/actor_film_ography_expand_icon"
                android:gravity="right"
                android:text="@string/s_all"
                android:textColor="@color/color_0075c4" />

            <ImageView
                android:id="@+id/expand_mark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_search_back_margin_left"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <ImageView
            android:id="@+id/seperate_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/title_bar_search_back_margin_left"
            android:background="@color/color_bbbbbb"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>
</LinearLayout>