<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/offset_pxtodx_24"
    android:paddingLeft="@dimen/offset_pxtodx_20"
    android:paddingRight="@dimen/offset_pxtodx_20">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/offset_pxtodx_20" >

        <ImageView
            android:id="@+id/sku_icon"
            android:layout_width="@dimen/offset_pxtodx_203"
            android:layout_height="@dimen/offset_pxtodx_203"
            android:layout_marginRight="@dimen/offset_pxtodx_37"
          	android:padding="@dimen/offset_pxtodx_3"
            android:background="@drawable/image_border"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_image" />

        <TextView
            android:id="@+id/sku_icon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#28C8DC"
            android:paddingLeft="@dimen/offset_pxtodx_5"
            android:paddingRight="@dimen/offset_pxtodx_5"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_pxtosp_24"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/sku_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_pxtosp_32" />

        <TextView
            android:id="@+id/sku_mtime_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sku_name"
            android:paddingRight="@dimen/offset_pxtodx_15"
            android:singleLine="true"
            android:textColor="@color/color_ff8600"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_pxtosp_34" />

        <TextView
            android:id="@+id/sku_market_price"
            android:paddingTop="@dimen/offset_pxtodx_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sku_name"
            android:visibility="gone"
            android:layout_toRightOf="@id/sku_mtime_price"
            android:singleLine="true"
            android:textColor="@color/color_bbbbbb"
            android:textSize="@dimen/font_size_pxtosp_24" />
    </RelativeLayout>

</LinearLayout>