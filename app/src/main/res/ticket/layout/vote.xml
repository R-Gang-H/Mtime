<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/seperate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_remind_seperated_region_background"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:visibility="visible" />
    <!--标签名字（投票）-->
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_pxtodx_34"
        android:layout_marginTop="@dimen/offset_pxtodx_30"
        android:background="@color/color_0075C4"
        android:ellipsize="end"
        android:paddingLeft="@dimen/offset_pxtodx_6"
        android:paddingRight="@dimen/offset_pxtodx_6"
        android:singleLine="true"
        android:text="投票"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_pxtosp_24" />
    <!--分割线（目前只有影片详情和影片短评显示）-->
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_pxtodx_2"
        android:layout_marginTop="@dimen/offset_10dp"
        android:background="@color/color_0075c4"
        android:visibility="gone" />
    <!--投票的主题内容&显示多选还是单选-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_pxtodx_34"
        android:layout_marginRight="@dimen/offset_pxtodx_30"
        android:layout_marginTop="@dimen/offset_pxtodx_15"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_pxtosp_34" />
    <!--以投票的人数（人数为0不显示）-->
    <TextView
        android:id="@+id/voter_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_pxtodx_34"
        android:layout_marginRight="@dimen/offset_pxtodx_30"
        android:layout_marginTop="@dimen/offset_pxtodx_30"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_pxtosp_30" />
    <!--投票的选项-->
    <com.mtime.widgets.ScrollListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_pxtodx_34"
        android:layout_marginRight="@dimen/offset_pxtodx_30"
        android:layout_marginTop="@dimen/offset_pxtodx_41"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/offset_pxtodx_30" />
</LinearLayout>