<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- 城区列表 -->
    <com.aspsine.irecyclerview.IRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pager_cinema_list_filter_district_list_irecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_f5f5f5"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/color_999999"
        android:scrollbarSize="@dimen/offset_4dp"
        />

    <!-- 商圈列表 -->
    <com.aspsine.irecyclerview.IRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pager_cinema_list_filter_district_business_irecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/color_999999"
        android:scrollbarSize="@dimen/offset_4dp"
        />

</LinearLayout>