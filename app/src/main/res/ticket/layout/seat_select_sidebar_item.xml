<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg_selector"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/offset_34px"
    android:paddingTop="@dimen/offset_34px" >

    <!-- 第一列 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 字号在代码里也有设置 -->

            <TextView
                android:id="@+id/item_change_scene_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_xxlarge" />

            <TextView
                android:id="@+id/movie_child_tv_nextday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/offset_2dp"
                android:background="@color/transparent"
                android:text="次日"
                android:textColor="@color/black_color"
                android:textSize="@dimen/font_size_10sp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/movie_child_tv_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_size_small_high" />
    </LinearLayout>
    <!-- 第二列 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_change_scene_tv_version_and_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_more" />

        <TextView
            android:id="@+id/item_change_scene_tv_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_more" />
    </LinearLayout>

    <!-- 第三列 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/movie_child_tv_activity"
            android:layout_width="@dimen/offset_34px"
            android:layout_height="@dimen/offset_34px"
            android:layout_marginTop="@dimen/offset_7px"
            android:background="@color/color_f15153"
            android:gravity="center"
            android:text="@string/st_coupon_tag"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_change_scene_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_size_normal_high_more" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/movie_child_tv_cinema_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/font_size_normal" />

                <View
                    android:id="@+id/movie_child_tv_cinema_price_line"
                    android:layout_width="36dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@color/dark_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/seatless_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/pic_seatselect_seatless_bg"
                    android:textColor="@color/color_f13900"
                    android:textSize="@dimen/font_size_12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 第四列 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/seat_select_change_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bt_solid_orange_66"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="更换"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>