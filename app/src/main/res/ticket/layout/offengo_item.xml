<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/offset_12dp"
    android:paddingBottom="@dimen/offset_12dp" >

    <TextView
        android:id="@+id/offengo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_marginRight="@dimen/offset_10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black_color"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/offengo_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_10dp"
        android:layout_marginRight="@dimen/offset_10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/font_size_normal" />

</LinearLayout>