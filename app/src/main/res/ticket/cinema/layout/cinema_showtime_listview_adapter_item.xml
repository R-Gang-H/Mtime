                    android:layout_marginLeft="@dimen/offset_2dp"
                    android:background="@color/transparent"
                    android:maxLines="1"
                    android:text="次日"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_10sp"
                    android:visibility="invisible" />
            </LinearLayout>

