<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_cinema_list_filter_district_item_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/offset_49dp"
    android:paddingLeft="@dimen/offset_30dp"
    android:paddingRight="@dimen/offset_15dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/adapter_cinema_list_filter_district_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_15sp"
        android:textColor="@color/color_555555"
        tools:text="朝阳区"
        />

    <TextView
        android:id="@+id/adapter_cinema_list_filter_district_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_15sp"
        android:textColor="@color/color_999999"
        tools:text="(20)"
        />

</LinearLayout>