<?xml version="1.0" encoding="utf-8"?><!-- TabWidget Spec -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- red point -->
    <ImageView
        android:id="@+id/tab_widget_redpoint"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/shape_red_point"
        android:visibility="gone" />

    <!-- icon -->
    <ImageView
        android:id="@+id/tab_widget_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/offset_9dp"
        />

    <!-- 用于home滚动到顶部，显示出home头-->
    <ImageView
        android:id="@+id/tab_widget_scroll_top_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/icon_tab_home_scroll_top"/>

    <!-- text -->
    <TextView
        android:id="@+id/tab_widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textAppearance="@style/tab_text_style" />

    <!-- 礼包Icon -->
    <ImageView
        android:id="@+id/tab_widget_gift_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/my_home_member_gift"
        android:visibility="gone" />

</FrameLayout>