<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/offset_15dp"
    android:paddingRight="@dimen/offset_15dp"
    android:background="@drawable/selector_dialog_unused_ticket_list_item_bg"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_15dp"
        >

        <TextView
            android:id="@+id/item_dialog_unused_ticket_list_movie_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_high_more"
            android:maxWidth="@dimen/offset_199dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="影片名影片名影片名影片名影片名影片名影片名"
            />

        <TextView
            android:id="@+id/item_dialog_unused_ticket_list_cinema_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_dialog_unused_ticket_list_movie_name_tv"
            android:layout_marginTop="@dimen/offset_6dp"
            android:textSize="@dimen/font_size_normal_more"
            android:textColor="@color/color_333333"
            android:maxWidth="@dimen/offset_199dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="影院名影院名影院名影院名影院名影院名影院名影院名"
            />

        <TextView
            android:id="@+id/item_dialog_unused_ticket_list_ticket_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_dialog_unused_ticket_list_cinema_name_tv"
            android:layout_marginTop="@dimen/offset_6dp"
            android:textSize="@dimen/font_size_normal_more"
            android:textColor="@color/color_333333"
            tools:text="X张"
            />

        <TextView
            android:id="@+id/item_dialog_unused_ticket_list_show_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_dialog_unused_ticket_list_ticket_count_tv"
            android:layout_marginTop="@dimen/offset_6dp"
            android:textColor="@color/color_FF8600"
            android:textSize="@dimen/font_size_normal_more"
            tools:text="上映日期"
            />

        <ImageView
            android:id="@+id/item_dialog_unused_ticket_list_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_remind_ticket_arrow"
            />

        <ImageView
            android:id="@+id/item_dialog_unused_ticket_list_cover_iv"
            android:layout_width="@dimen/offset_70dp"
            android:layout_height="@dimen/offset_105dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/item_dialog_unused_ticket_list_arrow_iv"
            android:layout_marginRight="@dimen/offset_15dp"
            android:background="@drawable/image_border"
            android:padding="@dimen/offset_1px"
            android:cropToPadding="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_dialog_unused_ticket_list_bottom_line_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_15dp"
        android:src="@drawable/dialog_unused_ticket_item_line"
        />

</LinearLayout>