<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset_56px"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/offset_34px"
        android:paddingRight="@dimen/offset_34px"
        android:paddingTop="@dimen/offset_40px" >

        <EditText
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dialog_edit_bg_big"
            android:hint="输入礼品卡卡号"
            android:lines="1"
            android:paddingLeft="@dimen/offset_22px"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/font_size_normal_high_more" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/offset_0dp"
            android:layout_marginTop="@dimen/offset_34px"
            android:background="@drawable/dialog_edit_bg_big"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="@dimen/offset_22px"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/font_size_normal_high_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/offset_12px"
        android:paddingLeft="@dimen/offset_34px"
        android:paddingTop="@dimen/offset_12px" >

        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            android:checked="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/st_with_card_put_account"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/font_size_normal_high" />
    </LinearLayout>

    <View
        android:id="@+id/layout_fill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_40px"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1px"
        android:background="@color/color_bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/str_cancel"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />

        <View
            android:layout_width="@dimen/offset_1px"
            android:layout_height="match_parent"
            android:background="@color/color_bbbbbb" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/ok"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />
    </LinearLayout>

</LinearLayout>