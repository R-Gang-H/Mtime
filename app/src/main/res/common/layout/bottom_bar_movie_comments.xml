<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f6f6f6"
    android:minHeight="@dimen/bottom_bar_movie_comments_view_height" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/color_bbbbbb"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/bottom_bar_movie_commnets_send_margin_right"
        android:layout_marginLeft="@dimen/bottom_bar_movie_commnets_send_margin_right"
        android:gravity="center"
        android:background="@drawable/comments_send_enabled_rectangle"
        android:text="@string/str_bottom_bar_movie_comments_send_label" />

    <EditText
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bottom_bar_movie_comments_text_view_margin_left"
        android:layout_marginTop="@dimen/bottom_bar_movie_comments_text_view_margin_top"
        android:layout_toLeftOf="@id/send"
        android:background="@drawable/bottom_comments_edit_background"
        android:focusable="true"
        android:hint="@string/st_comments_tips"
        android:imeOptions="actionSend"
        android:maxLines="3"
        android:minHeight="@dimen/bottom_bar_movie_comments_text_view_height"
        android:paddingLeft="@dimen/bottom_bar_comments_padding_left"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bbbbbb"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hint_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bottom_bar_movie_comments_text_view_margin_left"
        android:layout_toLeftOf="@id/send"
        android:background="@drawable/bottom_comments_edit_background"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:hint="@string/st_comments_tips"
        android:minHeight="@dimen/bottom_bar_movie_comments_text_view_height"
        android:paddingLeft="@dimen/bottom_bar_comments_padding_left"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bbbbbb"
        android:textSize="15sp" />

</RelativeLayout>