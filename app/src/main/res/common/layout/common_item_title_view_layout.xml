<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_item_title_view_root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/common_tab_bg"
    android:paddingLeft="@dimen/common_list_left_or_right_margin"
    android:paddingRight="@dimen/common_list_left_or_right_margin">

    <TextView
        android:id="@+id/common_item_title_view_text_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/movie_details_actor_list_title"
        android:textColor="#1d2736"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_item_title_view_all_tv"
        style="@style/common_item_title_view_all_tv_style"
        tools:text="@string/common_title_all_text"
        app:layout_constraintBottom_toBottomOf="@id/common_item_title_view_text_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/common_item_title_view_text_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>