<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/loading_img_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_img_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading_img"
        android:layout_width="@dimen/offset_98dp"
        android:layout_height="@dimen/offset_109dp"
        android:src="@drawable/loading_progress" />

    <TextView
        android:id="@+id/loading_default_txt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/offset_20px"
        android:text="@string/loading"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />

</LinearLayout>