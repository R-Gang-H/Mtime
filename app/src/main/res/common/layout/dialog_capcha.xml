<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset_56px"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/offset_34px"
        android:paddingRight="@dimen/offset_28px" >

        <EditText
            android:id="@+id/capcha_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_edit_bg"
            android:hint="@string/st_please_input_capcha"
            android:paddingLeft="@dimen/offset_22px"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_normal_high_more" />

        <ImageView
            android:id="@+id/capcha_img"
            android:layout_width="@dimen/offset_168px"
            android:layout_height="@dimen/offset_95px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/offset_36px"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/default_image" />

        <ImageView
            android:id="@+id/capcha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/offset_28px"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dialog_refresh" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1px"
        android:background="@color/color_bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/str_cancel"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />

        <View
            android:layout_width="@dimen/offset_1px"
            android:layout_height="match_parent"
            android:background="@color/color_bbbbbb" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/ok"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />
    </LinearLayout>

    <TextView
        android:id="@+id/dlg_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_green"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone" />

</LinearLayout>