<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset_56px"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/offset_40px"
        android:layout_marginLeft="@dimen/offset_34px"
        android:layout_marginRight="@dimen/offset_34px"
        android:layout_marginTop="@dimen/offset_40px"
        android:layout_weight="1"
        android:background="@drawable/dialog_edit_bg_max"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/dlg_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="left|top"
            android:hint="@string/str_share_mtime"
            android:lines="5"
            android:paddingLeft="@dimen/offset_22px"
            android:paddingRight="@dimen/offset_22px"
            android:paddingTop="@dimen/offset_22px"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_large" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="right"
            android:paddingRight="@dimen/offset_16px"
            android:paddingBottom="@dimen/offset_16px"
            android:text="@string/st_210"
            android:textColor="@color/color_bbbbbb"
            android:textSize="@dimen/font_size_normal_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1px"
        android:background="@color/color_bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/str_cancel"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />

        <View
            android:layout_width="@dimen/offset_1px"
            android:layout_height="match_parent"
            android:background="@color/color_bbbbbb" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_selector"
            android:paddingBottom="@dimen/offset_26px"
            android:paddingTop="@dimen/offset_26px"
            android:text="@string/ok"
            android:textColor="@color/color_0075C4"
            android:textSize="@dimen/font_size_large" />
    </LinearLayout>

</LinearLayout>