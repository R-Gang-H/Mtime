<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <!-- 模块title -->
    <TextView
        android:id="@+id/city_pinYin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_60px"
        android:background="@null"
        android:paddingLeft="@dimen/offset_30px"
        android:gravity="center_vertical"
        android:textColor="@color/color_8798af"
        android:textSize="@dimen/offset_12sp"
        tools:text="@string/st_A"
        />

    <!-- 热门城市列表 -->
    <com.mtime.widgets.MyGridView
        android:id="@+id/city_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_16px"
        android:layout_marginBottom="@dimen/offset_60px"
        android:layout_marginLeft="@dimen/offset_30px"
        android:layout_marginRight="@dimen/offset_30px"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:padding="@dimen/offset_0px"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/offset_20px"
        android:horizontalSpacing="@dimen/offset_18px"
        tools:listitem="@layout/city_grid_item"
        />

    <!-- 拼音分组城市列表 -->
    <com.mtime.widgets.MyGridView
        android:id="@+id/city_pinyin_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_30px"
        android:layout_marginRight="@dimen/offset_30px"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:numColumns="1"
        tools:listitem="@layout/city_search_item"
        />

</LinearLayout>