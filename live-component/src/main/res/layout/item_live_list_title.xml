<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/offset_30px"
        android:paddingBottom="@dimen/offset_30px"
        android:paddingLeft="@dimen/offset_30px">

        <ImageView
            android:id="@+id/mLiveListTitleBgIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/mLiveListTitleTv"
            app:layout_constraintLeft_toLeftOf="@id/mLiveListTitleTv"
            app:layout_constraintRight_toRightOf="@id/mLiveListTitleTv"
            android:layout_marginBottom="@dimen/offset_6px"
            />

        <TextView
            android:id="@+id/mLiveListTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="title title"
            android:textColor="@color/color_1d2736"
            android:textSize="@dimen/font_size_sp_17"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>