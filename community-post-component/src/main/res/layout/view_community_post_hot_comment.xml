<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/mCommunityPostCommentRoot">

        <TextView
            android:id="@+id/mCommunityPostCommentContentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4e5e73"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="hot comment" />

        <TextView
            android:id="@+id/mCommunityPostCommentLikeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="2220"
            android:textColor="@color/color_8798af"
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@id/mCommunityPostCommentDislikeTv"
            app:layout_constraintTop_toBottomOf="@id/mCommunityPostCommentContentTv"
            android:layout_marginTop="10dp"
            app:layout_goneMarginRight="0dp" />

        <TextView
            android:id="@+id/mCommunityPostCommentDislikeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_dislike"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="1110"
            android:textColor="@color/color_8798af"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mCommunityPostCommentContentTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>