<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <!-- 阴影部分 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/color_0d000000"
                android:startColor="@color/color_0d000000" />
            <corners android:topLeftRadius="@dimen/offset_12px" />
        </shape>
    </item>


    <!-- 背景部分 -->
    <item
        android:left="@dimen/offset_2px"
        android:top="@dimen/offset_2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_ffffff" />
            <corners android:topLeftRadius="@dimen/offset_12px" />
        </shape>
    </item>

</layer-list>
