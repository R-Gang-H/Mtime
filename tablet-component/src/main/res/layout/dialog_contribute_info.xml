<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mHostView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mContentLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_400px"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mContributeTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_48px"
            android:gravity="center"
            android:textColor="@color/color_303a47"
            android:textSize="@dimen/offset_18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="活动说明" />

        <TextView
            android:id="@+id/mContributeContentTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/offset_76px"
            android:layout_marginTop="@dimen/offset_48px"
            android:layout_marginEnd="@dimen/offset_50px"
            android:layout_marginBottom="@dimen/offset_25px"
            android:textColor="@color/color_404C57"
            android:textSize="@dimen/offset_18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mContributeTitleTv"
            tools:text="最终确认考核公式：达人考核公式：达人指数" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mInfoClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_33px"
        android:src="@drawable/ic_title_bar_close"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>