<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kotlin.tablet">

    <application
        android:name="debug.TabletApp"
        android:icon="@mipmap/ic_module"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_module_round"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".ui.create.FilmListCreateActivity">

        </activity>
        <activity
            android:name=".ui.success.FilmListCreateSuccessActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.list.TabletMainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.FilmListDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.add.FilmSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.contribute.ContributeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.history.ContributeHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.mycreate.MyCreateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.mine.FilmListMineActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.add.FilmSelectedActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.listsearch.FilmListSearchActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>