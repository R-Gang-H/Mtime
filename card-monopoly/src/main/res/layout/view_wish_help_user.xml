<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="5dp">

    <com.kotlin.android.card.monopoly.widget.nickname.NickNameView
        android:id="@+id/nickNameView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/labelView"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="32dp"
        android:paddingEnd="4dp"
        android:textColor="@color/color_4e5e73"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="西北射天狼" />

    <com.kotlin.android.card.monopoly.widget.CircleImageView
        android:id="@+id/avatarView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/nickNameView"
        app:civ_border_color="@color/color_e3e5ed"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/labelView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:lines="1"
        android:text="@string/help_you_realize_wish"
        android:textColor="@color/color_8798af"
        android:textSize="12sp" />
</RelativeLayout>