<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/offset_20dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/offset_76px"
        android:layout_height="@dimen/offset_20dp">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="@dimen/offset_76px"
            android:layout_height="@dimen/offset_34px"
            android:gravity="end|center_vertical"
            android:layout_centerVertical="true"
            android:textSize="@dimen/offset_12sp"
            tools:text="一口价" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/offset_40px"
            android:layout_height="@dimen/offset_40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_40px"
        android:gravity="center_vertical"
        android:textSize="@dimen/offset_14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/offset_12px"
        tools:text="我是000000"/>

</LinearLayout>