<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:id="@+id/panelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_dialog_pannel_deal_add_price"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="30dp"
        android:paddingEnd="25dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="你希望提高此卡的交易价格"
            android:textColor="@color/color_1d2736"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.kotlin.android.card.monopoly.widget.dialog.view.UnitInputView
            android:id="@+id/coinView"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kotlin.android.card.monopoly.widget.dialog.view.UnitInputView
            android:id="@+id/postscriptView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kotlin.android.card.monopoly.widget.dialog.view.NumProgressView
            android:id="@+id/numProgressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/color_8798af" />

        <TextView
            android:id="@+id/actionView"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="30dp"
            android:background="@color/color_feb12a"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/ok"
            android:textColor="@color/color_ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/closeView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/card_monopoly"
        android:src="@drawable/ic_dialog_close" />
</LinearLayout>