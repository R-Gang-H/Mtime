<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingTop="15dp">

    <com.kotlin.android.card.monopoly.widget.CircleImageView
        android:id="@+id/avatarView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/default_user_head"
        app:civ_border_color="@color/color_e3e5ed"
        app:civ_border_width="1dp" />

    <com.kotlin.android.card.monopoly.widget.nickname.NickNameView
        android:id="@+id/nickNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
        android:text="@string/card_monopoly"
        android:textColor="@color/color_4e5e73"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickNameView"
        android:layout_toEndOf="@+id/avatarView"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:textColor="@color/color_8798af"
        android:textSize="12sp"
        tools:text="留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板留言板" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e1e1e1" />
</RelativeLayout>