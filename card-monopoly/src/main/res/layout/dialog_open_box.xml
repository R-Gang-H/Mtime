<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="40dp"
            android:background="#22254750"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得卡片 20 张 金币 666"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />

            <com.kotlin.android.card.monopoly.widget.card.view.SelectCardView
                android:id="@+id/selectCardView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/actionView"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/color_feb12a"
                android:gravity="center"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/confirm_"
                android:textColor="@color/color_ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/card_monopoly"
            android:src="@mipmap/ic_dialog_icon_top" />
    </FrameLayout>

    <ImageView
        android:id="@+id/closeView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/card_monopoly"
        android:src="@drawable/ic_dialog_close" />
</LinearLayout>