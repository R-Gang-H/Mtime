<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.kotlin.android.card.monopoly.widget.CircleImageView
        android:id="@+id/avatarView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_user_head"
        app:civ_border_color="@color/color_48d6ea"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp" />

    <com.kotlin.android.card.monopoly.widget.UserTitleView
        android:id="@+id/userTitleView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp" />

    <com.kotlin.android.card.monopoly.widget.TipsBubble
        android:id="@+id/tipsBubble"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="35dp" />
</FrameLayout>