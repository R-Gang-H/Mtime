<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="640dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <com.kotlin.android.card.monopoly.widget.card.image.BoxImageView
                android:id="@+id/boxImageView"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="获得卡片 20 张 金币 666" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/limitCardBg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animaView1"
                        android:layout_width="110dp"
                        android:layout_height="152dp"
                        android:visibility="visible"
                        app:lottie_fileName="supreme_card.json" />
                    <!--                    <FrameLayout-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:background="@color/color_ff5a36"-->
                    <!--                        android:padding="2dp">-->

                    <!--                    </FrameLayout>-->
                    <com.kotlin.android.card.monopoly.widget.card.item.SelectCardItemView
                        android:id="@+id/limitCard1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/limitCardBg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animaView2"
                        android:layout_width="110dp"
                        android:layout_height="152dp"
                        android:visibility="visible"
                        app:lottie_fileName="supreme_card.json" />

                    <!--                    <FrameLayout-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:background="@color/color_ff5a36"-->
                    <!--                        android:padding="2dp">-->

                    <!--                    </FrameLayout>-->
                    <com.kotlin.android.card.monopoly.widget.card.item.SelectCardItemView
                        android:id="@+id/limitCard2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>

            <com.kotlin.android.card.monopoly.widget.card.view.OpenBoxCardView
                android:id="@+id/openBoxCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/actionView"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginEnd="8dp"
                    android:background="@color/color_feb12a"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/confirm_"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/closeView"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginStart="8dp"
                    android:background="@color/color_12c7e9"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/cancel"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.core.widget.NestedScrollView>